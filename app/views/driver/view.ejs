<% layout('./../layouts/default') -%>
<div class="row">
    <div class="col-12">
        <div class="widget pad30-65">
            <h4 class="font-30 mb-30">View Driver </h4>
            <div class="row">
                <div class="col-lg-12 " style="padding-bottom: 15px;">
                    <img style="width: 90px; height: 90px; border-radius: 50%; border: 1px solid #d3d3d3"
                        src="<%=url%><%=driver.image%>"
                        alt="image">
                </div>
                <div class="col-lg-6">
                    <div class="form-group mb-3">
                        <label>Name: </label> <%= driver.name %>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group mb-3">
                        <label>Email: </label> <%= driver.email %>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group mb-3">
                        <label>Approved: </label> <%- driver.isApproved ? '<span class="badge label-table badge-secondary">DisApproved</span>': '<span class="badge label-table badge-success">Approved</span>' %>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group mb-3">
                        <label>Status: </label> <%- driver.isSuspended ? '<span class="badge label-table badge-secondary">In-Active</span>': '<span class="badge label-table badge-success">Active</span>' %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>  