<% layout('./../layouts/default') -%>
<div class="row">
    <div class="col-12">
        <div class="widget pad30-65">
            <h4 class="font-30 mb-30">Driver Vehicle info </h4>
            <div class="row">
                <div class="col-lg-12 " style="padding-bottom: 15px;">
                    <img style="width: 90px; height: 90px; border-radius: 50%; border: 1px solid #d3d3d3"
                        src="<%=url%><%=vehicle.dlImage%>"
                        alt="image">
                </div>
                <div class="col-lg-12 " style="padding-bottom: 15px;">
                    <img style="width: 90px; height: 90px; border-radius: 50%; border: 1px solid #d3d3d3"
                        src="<%=url%><%=vehicle.rcImage%>"
                        alt="image">
                </div>
                <div class="col-lg-12 " style="padding-bottom: 15px;">
                    <img style="width: 90px; height: 90px; border-radius: 50%; border: 1px solid #d3d3d3"
                        src="<%=url%><%=vehicle.panImage%>"
                        alt="image">
                </div>
                <div class="col-lg-6">
                    <div class="form-group mb-3">
                        <label>vehicle Type: </label> <%= vehicle.vehicleId.name %>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group mb-3">
                        <label>Vehicle Name: </label> <%= vehicle.vehicleName %>
                    </div>
                </div>
                <div class="form-group mb-3 col-lg-6">
                    <label>Vehicle Model: </label> <%= vehicle.vehicleModel %>
                </div>
                <div class="form-group mb-3 col-lg-6">
                    <label>Vehicle Number: </label> <%= vehicle.vehicleNumber %>
                </div>
                <div class="col-lg-6">
                    <div class="form-group mb-3">
                        <label>Status: </label> <%- vehicle.isSuspended ? '<span class="badge label-table badge-secondary">In-Active</span>': '<span class="badge label-table badge-success">Active</span>' %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>  