<% layout('./../layouts/default') -%>
<div class="row">
    <div class="col-lg-12 mb-5">
        <div class="card-body pt-3 widget">
            <h4 class="font-30 mb-30">Add Vehicle Info</h4>
            <form method="POST" id="addUser" action="/vehicletype/add/save_add" class="mt-1 login-input"
                enctype="multipart/form-data">
                <div class="row p-3">
                    <div class="form-group mb-3 col-lg-7">
                        <label for="formFile" class="form-label">Vehicle Image</label>
                        <input class="form-control" type="file" id="formFile" name="image" required>
                    </div>
                    <div class="form-group mb-3 col-lg-7">
                        <label>Enter Name<span class="text-danger">*</span></label>
                        <input type="text" name="name" class="form-control" placeholder="Name"
                            autocomplete="off" required>
                    </div>
                    <div class="form-group mb-3 col-lg-7">
                        <label>Enter Type<span class="text-danger">*</span></label>
                        <input type="text" name="type" class="form-control" placeholder="Type"
                            autocomplete="off" required>
                    </div>
                    <div class="form-group mb-3 col-lg-7">
                        <label>Enter Price/Km.Min<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="vehicle_price" placeholder="Price/Km" name="charge_time_weight">
                    </div>

