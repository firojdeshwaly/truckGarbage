<% layout('./../layouts/default') -%>
<div class="row">
    <div class="col-lg-12 mb-5">
        <div class="card-body pt-3 widget">
            <h4 class="font-30 mb-30">Add Users</h4>
            <form method="POST" id="addUser" action="/users/add/save_add" class="mt-1 login-input"
                enctype="multipart/form-data">
                <div class="row p-3">
                    <div class="form-group mb-3 col-lg-6">
                        <label for="formFile" class="form-label">Upload Image</label>
                        <input class="form-control" type="file" id="formFile" name="image" required>
                    </div>
                    <div class="form-group mb-3 col-lg-6">
                        <label>Enter Name:</label>
                        <input type="text" name="name" class="form-control" placeholder="Name"
                            autocomplete="off" required>
                    </div>
                    <div class="form-group mb-3 col-lg-6">
                        <label>Enter Full Name:</label>
                        <input type="text" name="fullName" class="form-control" placeholder="Full name"
                            autocomplete="off" required>
                    </div>
                    <div class="form-group mb-3 col-lg-6">
                        <label>Enter Email:</label>
                        <input type="email" name="email" class="form-control" placeholder="Email"
                            autocomplete="off" required>
                    </div>
                    <div class="form-group mb-3 col-lg-6">
                        <label>Enter Password:</label>
                        <input type="password" name="password" class="form-control" id="password"
                            placeholder="Password" autocomplete="off" required>
                        <div></div>
                    </div>
                    <div class="form-group mb-3 col-lg-6">
                        <label>Enter Phone Number:</label>
                        <input type="number" name="phoneNumber" class="form-control" placeholder="Phone Number"
                            autocomplete="off" required>
                    </div>
                    <div class="form-group mb-3 col-lg-6">
                        <label>Enter DOB:</label>
                        <input type="text" name="dob" class="form-control" placeholder="DOB"
                            autocomplete="off" required>
                    </div>
                </div>
                <div class="col-lg-12 text-center">
                    <div class="form-group mb-3 text-center">
                        <button id="submitProfileForm" type="submit"
                            class="btn btn-primary waves-effect waves-light">ADD
                        </button>
                    </div>
                </div>  
            </form>
        </div>
    </div>
</div>