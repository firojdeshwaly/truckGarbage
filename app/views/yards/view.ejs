<% layout('./../layouts/default') -%>
<div class="row">
    <div class="col-12">
        <div class="widget pad30-65">
            <h4 class="font-30 mb-30">View preferences </h4>
            <div class="row">
                <div class="col-lg-12 " style="padding-bottom: 15px;">
                    <img style="width: 90px; height: 90px; border-radius: 50%; border: 1px solid #d3d3d3"
                        src="<%=url%><%=preferences.image%>"
                        alt="image">
                </div>
                <div class="col-lg-7">
                    <div class="form-group mb-3">
                        <label>Title: </label> <%= preferences.title %>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="form-group mb-3">
                        <label>Description: </label> <%= preferences.description %>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="form-group mb-3">
                        <label>Status: </label> <%- preferences.isSuspended ? '<span class="badge label-table badge-secondary">In-Active</span>': '<span class="badge label-table badge-success">Active</span>' %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>  