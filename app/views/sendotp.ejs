<% layout('layouts/notAuthorized') -%>
<div class="text-center w-75 m-auto">
    <a>
        <span><img src="<%= siteUrl %>/images/logo2.png" alt="<%= siteTitle %>" style="height: 80px;  "></span>
    </a>
    <p class="text-muted mb-4 mt-3"></p>
</div>
<%if(msg==true){%>
<div class="text-success text-center">Reset Password Link Sent</div>
<%}else{%>
    <div class="text-success text-center">Please Enter Valide OTP</div><%}%>
<form  action="<%=siteUrl%>/auth/validate-otp?email=<%=email%>" method="post">
    <div class="row otpdata" style="display: block;">
        <div class="col-lg-12">
            <div class="form-group">
                <label class="label">OTP<span style="color: red !important;">*</span></label>
                <input type="number" minlength="4" maxlength="4" class="form-control" id="otp" placeholder="OTP" name="otp" required autocomplete="off">
                <div class="text-danger otp"></div>
            </div>
            <div class="form-group" style="text-align: center;">
                <a href="<%= siteUrl %>/auth/resend-otp?email=<%= email %>" id="resendOTP" >Resend OTP</a>
            </div>
            <div class="form-group mb-0 text-center">
                <button type="submit"  class="btn btn-primary submit-btn btn-block" >Submit</button>
            </div>
        </div>
    </div>
</form>