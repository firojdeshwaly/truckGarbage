<% layout('./../layouts/default') -%>
<div class="row">
    <div class="col-12">
        <div class="card-body pt-3 pl-3 widget">
            <h3 class="page-title mb-3"><%=name%></h3>
            <form action="/auth/static?id=<%=id%>" method="post" >
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group mb-3">
                            <label>Description <span class="text-danger">*</span></label>
                                <textarea type="text"  id="editor"  class="form-control"  name="content" placeholder="Message"  required><%=content%></textarea>
                                <div class="text-danger contactNumber"></div>
                        </div>
                    </div>
                    <div class="col-lg-12 text-right">
                        <div class="form-group mb-3 mr-4 text-right">
                            <button  type="submit"
                                class="btn btn-primary waves-effect waves-light">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/jquery/1/jquery.min.js"></script>
    <script>
        CKEDITOR.replace('editor');
</script>