<% layout('./../layouts/default') -%>
<div class="row">
    <div class="col-lg-12 mb-5">
        <div class="card-body pt-3 widget">
            <h4 class="font-30 mb-30">Add Welcome</h4>
            <form method="POST" id="addUser" action="/welcome/add/save_add" class="mt-1 login-input"
                enctype="multipart/form-data">
                <div class="row p-3">
                    <div class="form-group mb-3 col-lg-7">
                        <label for="formFile" class="form-label">Upload Image</label>
                        <input class="form-control" type="file" id="formFile" name="image" required>
                    </div>
                    <div class="form-group mb-3 col-lg-7">
                        <label>Enter Title<span class="text-danger">*</span></label>
                        <input type="text" name="title" class="form-control" placeholder="Title"
                            autocomplete="off" required>
                    </div>
                    <div class="form-group mb-3 col-lg-7">
                        <label>Description<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="description" placeholder="Description" name="description">
                    </div>
                </div>
                <div class="col-lg-12 text-center">
                    <div class="form-group mb-3 text-center">
                        <button id="submitProfileForm" type="submit"
                            class="btn btn-primary waves-effect waves-light">ADD
                        </button>
                    </div>
                </div>  
            </form>
        </div>
    </div>
</div>