<% layout('./../layouts/default') -%>
<div class="row">
    <div class="col-12">
        <div class="widget pad30-65 mb-5">
            <h4 class="font-30 mb-30">Edit Welcome </h4>
            <form method="post" action="/welcome/update/<%=welcome._id %>" enctype="multipart/form-data">
                <div class="row p-3">
                    <div class="form-group mb-3 col-lg-7">
                        <label for="formFile" class="form-label">Upload Image</label>
                        <input class="form-control" type="file" id="formFile" name="image">
                    </div>
                    <div class="form-group mb-3 col-lg-7">
                        <label>Enter Title:</label>
                        <input type="text" name="title" class="form-control" placeholder="Title" autocomplete="off" value="<%=welcome.title %>" required>
                    </div>
                    <div class="form-group mb-3 col-lg-7">
                        <label>Description:</label>
                        <input type="text" name="description" class="form-control" placeholder="Description" autocomplete="off" value="<%=welcome.description %>" required>
                    </div>
                </div>
                <div class="col-lg-12 text-center">
                    <div class="form-group mb-3 text-center">
                        <button id="submitProfileForm" type="submit"
                            class="btn btn-primary waves-effect waves-light">Update
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>